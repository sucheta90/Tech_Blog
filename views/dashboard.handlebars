<div class="container">
  <h2>Your Dashboard</h2>
  {{#if blogs}}
    <div class="card">
      {{#each blogs as |blog|}}
        {{log this}}
        <a href="/blog/{{blog.id}}">
          <div class="card">
            <div class="card-header d-flex justify-content-around">
              <h3>{{blog.blog_title}}</h3>
              <p>posted on
                {{format_date blog.createdAt}}

              </p>

            </div>
            <div class="card-body">
              <p>{{blog.description}}</p>

            </div>
          </div></a>
      {{/each}}
    </div>

  {{/if}}
  <div class="container">
    <a href="/blog"> <button class="btn btn-primary">Add New Blog</button></a>

  </div>

</div>